<% include ../partials/nav %>

<div class="container text-center">
  <header>
    <h1>Create a new Campground</h1>
  </header>
</div>

<div class="container">
  <div class="row">
    <div class="div-form">
      <form class="" action="/campgrounds" method="post">
        <div class="form-group">
          <label class="sr-only" for="name">Campground name:</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="Campground name">
        </div>
        <div class="form-group">
          <label class="sr-only" for="name">Image URL:</label>
          <input type="text" class="form-control" name="image" id="image" placeholder="Image url">
        </div>
        <div class="form-group">
          <label class="sr-only" for="description">Campsite description:</label>
          <textarea class="form-control" name="description" id="description" rows="3" placeholder="Your description..."></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-2">Submit</button>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>

