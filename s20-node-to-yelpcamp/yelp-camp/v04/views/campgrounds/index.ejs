<% include ../partials/header %>

<% include ../partials/nav %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp</h1>
      <p>View our hand-picked campgrounds from all over the world.</p>
      <p>
        <a href="/campgrounds/new" class="btn btn-primary">Add New campsite</a>
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our most popular sites</h3>
    </div>
  </div>

  <div class="row campgrounds">
    <% if (campgrounds) { %>
      <% campgrounds.forEach((campground) => { %>
        <div class="campground col-md-3 col-sm-6">
          <figure class="figure">
            <img class="img-thumbnail" src="<%= campground.image %>">
            <figcaption class="figure-caption text-center"><%= campground.name %></figcaption>
          </figure>
          <a class="btn btn-primary btn-sm btn-block" href="/campgrounds/<%= campground.id %>">Details</a>
        </div>
      <% }); %>
    <% } %>
  </div>
</div>

<% include ../partials/footer %>
