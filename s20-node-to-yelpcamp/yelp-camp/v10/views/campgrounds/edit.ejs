<% include ../partials/header %>

<% include ../partials/nav %>

<div class="container text-center">
  
  <% include ../partials/flash %>

  <header>
    <h1>Edit <%= campground.name %></h1>
  </header>
</div>

<div class="container">
  <div class="row">
    <div class="div-form">
      <form class="" action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label class="sr-only" for="name">Campground name:</label>
          <input type="text" class="form-control" name="campground[name]" id="name" placeholder="Campground name" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <label class="sr-only" for="name">Image URL:</label>
          <input type="text" class="form-control" name="campground[image]" id="image" placeholder="Image url" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <label class="sr-only" for="description">Campsite description:</label>
          <textarea class="form-control" name="campground[description]" id="description" rows="3" placeholder="Your description..."><%= campground.description %>"</textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-2">Update</button>
      </form>
      <a href="/campgrounds/<%= campground.id %>">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
