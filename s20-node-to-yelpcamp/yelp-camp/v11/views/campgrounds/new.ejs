<% include ../partials/header %>

<% include ../partials/nav %>

<div class="container text-center">
  
  <% include ../partials/flash %>

  <header>
    <h1>Create a new Campground</h1>
  </header>
</div>

<div class="container">
  <div class="row">
    <div class="div-form">
      <form class="" action="/campgrounds" method="post">
        <div class="form-group">
          <label class="sr-only" for="name">Campground name:</label>
          <input type="text" class="form-control" name="campground[name]" id="name" placeholder="Campground name">
        </div>
        <div class="form-group">
          <label class="sr-only" for="price">Price per night:</label>
          <input type="number" class="form-control" name="campground[price]" id="price" placeholder="ex) 9.99" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <label class="sr-only" for="image">Image URL:</label>
          <input type="text" class="form-control" name="campground[image]" id="image" placeholder="Image url">
        </div>
        <div class="form-group">
          <label class="sr-only" for="location">Location:</label>
          <input type="text" class="form-control" name="campground[location]" id="location" placeholder="Yosemite National Park, CA" required>
        </div>
        <div class="form-group">
          <label class="sr-only" for="description">Campsite description:</label>
          <textarea class="form-control" name="campground[description]" id="description" rows="3" placeholder="Your description..."></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-2">Submit</button>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
