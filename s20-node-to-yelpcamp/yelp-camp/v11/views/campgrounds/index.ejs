<% include ../partials/header %>

<% include ../partials/nav %>

<div class="container">

  <% include ../partials/flash %>

  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp</h1>
      <p>View our hand-picked campgrounds from all over the world.</p>
      <p>
        <a href="/campgrounds/new" class="btn btn-primary">Add New campsite</a>
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our most popular sites</h3>
    </div>
  </div>

  <div class="row campgrounds">
    <% if (campgrounds) { %>
      <% campgrounds.forEach((campground) => { %>

        <div class="campground card">
          <img class="card-img-top" src="<%= campground.image %>" alt="Small picture of <%= campground.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= campground.name %></h5>
            <a class="btn btn-primary btn-sm btn-block" href="/campgrounds/<%= campground.id %>">Details</a>
          </div>
        </div>
        
      <% }); %>
    <% } %>
  </div>
</div>

<% include ../partials/footer %>
