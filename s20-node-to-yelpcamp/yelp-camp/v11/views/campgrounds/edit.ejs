<% include ../partials/header %>

<% include ../partials/nav %>

<div class="container text-center">
  
  <% include ../partials/flash %>

  <header>
    <h1>Edit <%= campground.name %></h1>
  </header>
</div>

<div class="container">
  <div class="row">
    <div class="div-form">
      <form class="" action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label class="sr-only" for="name">Campground name:</label>
          <input type="text" class="form-control" name="campground[name]" id="name" placeholder="Campground name" value="<%= campground.name %>" required>
        </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">$</div>
          </div>
          <input type="number" class="form-control" name="campground[price]" id="price" placeholder="ex) 9.99" value="<%= campground.price %>" min="0.01" step="0.01" required>
        </div>
        <div class="form-group">
          <label class="sr-only" for="name">Image URL:</label>
          <input type="text" class="form-control" name="campground[image]" id="image" placeholder="Image url" value="<%= campground.image %>" required>
        </div>
        <div class="form-group">
          <label class="sr-only" for="location">Location:</label>
          <input type="text" class="form-control" name="campground[location]" id="location" placeholder="Yosemite National Park, CA" value="<%= campground.location %>" required>
        </div>
        <div class="form-group">
          <label class="sr-only" for="description">Campsite description:</label>
          <textarea class="form-control" name="campground[description]" id="description" rows="3" placeholder="Your description..." required><%= campground.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-2">Update</button>
      </form>
      <a href="/campgrounds/<%= campground.id %>">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
