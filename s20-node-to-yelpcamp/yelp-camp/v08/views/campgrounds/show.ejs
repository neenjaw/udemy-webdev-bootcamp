<% include ../partials/header %>

<% include ../partials/nav %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group mb-3">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">

      <div class="card">
        <img class="card-img-top" src="<%= campground.image %>" alt="A picture of <%= campground.name %>">
        <div class="card-body">
          <h5 class="float-right">$9.00/night</h5>
          <h4 class="card-title"><a href="#"><%= campground.name %></a></h4>
          <p class="card-text"><%= campground.description %></p>
          <p class="card-text">
            <small class="text-muted">
              Posted <%= campground.created.getMonth() + 1 %>/<%= campground.created.getDate() %>/<%= campground.created.getFullYear() %> by <%= campground.author.name %>
            </small>
          </p>
        </div>
        <div class="card-footer">
          <div class="text-right">
            <a class="btn btn-success" href="/campgrounds/<%= campground.id %>/comments/new">Add new Comment</a>
          </div>
          <hr>
          <% campground.comments.forEach((comment) => { %>
          <div class="row">
            <div class="col-md-12">
              <h5>
                <span>★★★★☆</span>
                <strong><%= comment.author.name %></strong>
                <small class="float-right text-muted"><% if (!campground.updated) { %>Posted <%= campground.created.getMonth() + 1 %>/<%= campground.created.getDate() %>/<%= campground.created.getFullYear() %><% } else { %>Last updated <%= campground.updated.getMonth() + 1 %>/<%= campground.updated.getDate() %>/<%= campground.updated.getFullYear() %><% } %></small>
              </h5>
              <p>
                <%= comment.text %>
              </p>
            </div>
          </div>
          <% }); %>
          
          
        </div>
      </div>



    </div>
  </div>

</div>

<% include ../partials/footer %>
